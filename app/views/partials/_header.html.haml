.main-container-header
  .navigation
    .navigation-inner
      = link_to "ENCOREBEAT", root_path, class: "logo"
      .main-nav-options
        - if current_user
          = user_avatar_thumb_small(current_user)
          #{current_user.username}
          = link_to "Submit Song", new_submission_path
          = link_to "Logout", session_path(current_user), method: :delete
        - else 
          = link_to "Sign Up", signup_path
          = link_to "Login", login_path
  .main-container-header-overlay
  %h2.main-header-subtitle The newest hits in electronic music. Everyday.