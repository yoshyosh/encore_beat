%header.main-container-header
  .navigation
    .navigation-inner
      = link_to root_path, class: "logo" do
        %span.encore Encore
        %span.beat Beat
      .main-nav-options
        - if current_user && !@hide_nav
          = link_to username_path(current_user.username) do
            = user_avatar_thumb_small(current_user)
            = submission_username(current_user)
          = link_to "Submit Song", new_submission_path
          = link_to "Logout", session_path(current_user), method: :delete
        - else 
          = link_to "Submit Song", signup_path(w: true)
          = link_to "Signup", signup_path
          = link_to "Login", login_path
  .main-container-header-overlay
  - if @keep_headline || !current_user
    %h2.main-header-subtitle The newest hits in electronic dance music. Everyday.