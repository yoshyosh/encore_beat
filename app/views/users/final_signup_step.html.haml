- if @user.identities.any?
  .main-container-outer
    .main-header-title.main-header-title-margin-bot CREATE ACCOUNT

    = form_for @user, html: {class: "form-container"} do |f|
      -if @user.errors.any?
        .error_messages
          %ul
            - for message in @user.errors.full_messages
              %li= message
      = f.text_field :username, placeholder: 'Username', value: @user.identities.first.username, id: 'username', class: 'submit-input'
      = f.text_field :email, :placeholder => 'Email (you.are@awesome.com)', id: 'email', class: 'submit-input'
      = f.submit 'Signup', class: "primary-action-button"
- else
  = form_for @user, html: {class: "form-container"} do |f|
    -if @user.errors.any?
      .error_messages
        %ul
          - for message in @user.errors.full_messages
            %li= message
    / Photo form here
    / This is just a dummy form, please delete when photo is done:
    = f.text_field :username, placeholder: 'Username', id: 'username', class: 'submit-input'
    = f.submit 'Signup', class: "primary-action-button"